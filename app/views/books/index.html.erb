<h1>Books</h1>
 <table>
   <thead>
     <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><span><%= link_to 'show', "/books/#{book.id}" %></span></td>
    <td><span><%= link_to 'Edit', edit_book_path(book.id), class: "edit_#{@book.id}" %></span></td>
    <td><span><%= link_to 'destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span></td>
   </tr>
    <% end %>
   </tdody>
  </table>
 <h2>New book</h2>

 <%= form_with model: @book, local:true do |f| %>
 <%= render 'layouts/error_books', model: f.object %>
   <h4>Title</h4>
   <%= f.text_field :title %>
   <h4>Body</h4>
   <%= f.text_area :body %>
   <p><%= f.submit "Create Book" %></p>

 <% end %>